# Website-wide .gitignore

# Environment files - CRITICAL SECURITY
.env
.env.*
backend/.env
frontend/.env
*.env

# Secrets and configuration
config.yml
cloudflare.yml
secrets/
keys/

# Database files
*.sqlite
*.sqlite-shm
*.sqlite-wal
*.db
database.sqlite*

# Backup files
backups/
temp_backups/
backend/backups/
*.backup
*.bak

# Log files
logs/
tunnel_logs/
*.log
backend/*.log
frontend/*.log

# Dependencies
node_modules/
backend/node_modules/
frontend/node_modules/
npm-debug.log*
yarn-debug.log*

# Build outputs
backend/dist/
frontend/build/
frontend/dist/
.next/
out/

# OS files
.DS_Store
Thumbs.db
*.tmp
*.temp

# IDE files
.vscode/settings.json
.idea/
*.swp
*.swo

# SSL/Certificates
*.pem
*.key
*.crt
*.cert

# User uploads
uploads/
backend/uploads/
frontend/public/uploads/

# Cache
.cache/
.npm/
.yarn/
